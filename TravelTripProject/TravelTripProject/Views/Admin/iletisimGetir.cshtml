@model TravelTripProject.Models.Sınıflar.Iletisim
@{
    ViewBag.Title = "iletisimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/web/js/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>


<br />
<h2>İletisim Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("iletisimGetir", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.AdSoyad)
    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Konu)
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mesaj)
    @Html.TextAreaFor(x => x.Mesaj, 15, 1, new { @class = "form-control" })
    <br />

    <br />
    <button class="btn btn-success">Güncelle</button>
    <script>
        $('#btnguncelle').click(function () {
            alert("Blog güncellendi.")
        });
    </script>
}

